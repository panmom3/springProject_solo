<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS09.dao.CustomerDAO">
	<select id="getTotRecCnt" resultType="int">
		<if test="part == '전체'">
			select count(*) from inquiry <if test="mid !='admin'"> where mid=#{mid} </if>
		</if>
		<if test="part != '전체'">
			select count(*) from inquiry where part = #{part} <if test="mid != 'admin'"> and mid=#{mid} </if>
		</if>
	</select>
	
	<select id="getTotRecCntAdmin" resultType="int">
		select count(*) from inquiry <if test="part != '전체'"> where reply = #{part} </if>
	</select>
	
	<select id="getInquiryList" resultType="com.spring.springGroupS09.vo.InquiryVO">
		<if test="part == '전체'">
			select * from inquiry <if test="mid != 'admin'"> where mid=#{mid} </if> order by idx desc limit #{startIndexNo}, #{pageSize};
		</if>
		<if test="part != '전체'">
			select * from inquiry where part = #{part} <if test="mid != 'admin'"> and mid=#{mid} </if> order by idx desc limit #{startIndexNo}, #{pageSize};
		</if>
	</select>
	<select id="getInquiryView" resultType="com.spring.springGroupS09.vo.InquiryVO">
		select * from inquiry where idx = #{idx};
	</select>
	<select id="getInquiryReply" resultType="com.spring.springGroupS09.vo.InquiryReplyVO">
		select * from inquiryReply where inquiryIdx = #{idx};
	</select>
	
  <insert id="setInquiryInput">
    insert into inquiry values (default,#{vo.mid},#{vo.title},#{vo.part},default,#{vo.content},#{vo.FName},#{vo.FSName},default);
  </insert>
  
  <update id="setInquiryUpdate">
  	update inquiry set title=#{vo.title},part=#{vo.part},wDate=now(),content=#{vo.content} <if test="vo.FName != ''"> ,fName=#{vo.FName},FSName=#{vo.FSName} </if>where idx=#{vo.idx};
  </update>
  
  <delete id="setInquiryDelete">
  	delete from inquiry where idx = #{idx};
  </delete>

</mapper>